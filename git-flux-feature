#!/usr/bin/env sh


USAGE="feature <start|finish|sync> <name> [base] [-h]"
LONG_USAGE="---"


cmd_start() {
	validate_mandatory_arg "$1"
	io_log "starting feature '$1'..."
	create_branch_from_base "$(git_config_get "prefix.feature")$1" "$(git_config_get "branch.team")"
	io_log_ok "feature '$1' is started. happy coding!"
}

cmd_finish() {
	validate_mandatory_arg "$1"
	io_confirm "the local and remote branches of '$1' will be deleted, forever! continue?" "i knew you'd chicken out."
	io_log "finishing feature '$1'..."
	destroy_branch_from_base "$(git_config_get "prefix.feature")$1"
	io_log_ok "feature '$1' is finished. RIP."
}

cmd_sync() {
	validate_mandatory_arg "$1"
	io_log "syncing feature '$1' with the base..."
	sync_branch_with_base "$(git_config_get "prefix.feature")$1"
	io_log_ok "feature '$1' is in sync with the base."
}
