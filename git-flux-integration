#!/usr/bin/env sh


USAGE="integration <sync> [-h]"

LONG_USAGE="
${t_bold}${t_fg_magenta}integration${t_off}
-----------

handle sync of the integration branch.


${t_bold}available actions:${t_off}

   ${t_bold}sync <name>${t_off}
      pulls changes from the base branch, i.e. 'master', into the integration branch.
 "


cmd_sync() {
	local branch="$(git_config_get "branch.integration")"
	local base="master"
	io_log "syncing '$branch' with '$base'..."
	sync_branch_with_base "$branch" "$base"
	io_log_ok "'$branch' is in sync with '$base'."
}
