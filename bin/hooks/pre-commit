#!/usr/bin/env bash


main() {
	render_usage_docs
}

render_usage_docs() {
	local git_root="$(git rev-parse --show-toplevel)"

	# install git-flux from source - required for the usage.sh script
	${git_root}/bin/dev-setup.sh update || { exit 1; }

	# render usage docs
	${git_root}/bin/usage.sh || { exit 2; }

	exit 0
}


main
